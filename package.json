{
    "name": "scrolls-monorepo",
    "private": true,
    "version": "0.0.1",
    "workspaces": [
        "apps/*",
        "packages/*"
    ],
    "scripts": {
        "dev": "turbo run dev --filter=scrolls",
        "clean": "rm -rf node_modules && rm -rf apps/node_modules && rm -rf packages/*/node_modules"
    },
    "devDependencies": {
        "typescript": "^5.0.0",
        "turbo": "^2.1.1"
    },
    "packageManager": "bun@1.1.19"
}